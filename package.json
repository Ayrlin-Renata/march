{
  "name": "march",
  "private": true,
  "version": "0.3.1-alpha",
  "type": "module",
  "author": {
    "name": "Ayrlin Renata"
  },
  "icon": "public/march_icon_color.png",
  "description": "Image management and editing application.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ayrlin-Renata/march.git"
  },
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"npm run electron:dev\"",
    "electron:dev": "wait-on http://localhost:5173 && npm run compile:electron && electron .",
    "compile:renderer": "tsc -p tsconfig.app.json",
    "compile:electron": "tsc -p tsconfig.electron.json",
    "build": "npm run compile:renderer && vite build && npm run compile:electron",
    "dist": "npm run build && electron-builder",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.ayrlin.march",
    "productName": "March",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "icon": "public/march_icon_color.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Ayrlin-Renata",
        "repo": "march"
      }
    ]
  },
  "dependencies": {
    "@atproto/api": "^0.18.9",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "chokidar": "^5.0.0",
    "clsx": "^2.1.1",
    "driver.js": "^1.4.0",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "framer-motion": "^12.23.26",
    "i18next": "^25.7.3",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-easy-crop": "^5.5.6",
    "react-i18next": "^16.5.0",
    "react-icons": "^5.5.0",
    "react-zoom-pan-pinch": "^3.7.0",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  }
}